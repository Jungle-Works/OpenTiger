<% description_value = Maybe(form_data['paragraph']).or_else("") %>
<div class="form-group">
    <label for="">Description</label>
     <% markdown_popup_link = link_to t("admin.landing_page.format_markdown_link"), "#", id: "markdown-popup-link" %>
     <% info_text = t("admin.landing_page.format_markdown", link: markdown_popup_link).html_safe %>
    <%= render partial: "layouts/info_text", locals: { text: info_text } %>
    <textarea name="<%= label %>" id="<%= label %>"><%= description_value %></textarea>
</div>