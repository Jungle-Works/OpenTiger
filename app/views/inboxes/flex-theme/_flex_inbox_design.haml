:scss
  .conversation-row{
    border: 1px solid #E7E7E7;
    border-radius: 4px;
    width: 100%;
    position: relative;
    left: 0;
    transition: box-shadow 0.05s ease-out, width 0.1s ease-out, left 0.1s ease-out, padding 0.1s ease-out;
    margin-bottom: 8px !important;
    background-color: #FFFFFF;
    &:hover{
      box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.1);
    }
  }
  .conversation-types{
    border-bottom: 1px solid #e7e7e7;
    margin-bottom: 50px;
    margin-left: 50px;
    @media screen and (max-width: 768px){
      margin-left: 0;
      margin-bottom: 25px;
      overflow-x: auto;
    }

    .coversation-types-tab{
      display: flex;
      .conversation-type-title{
        padding: 20px;
        margin: 0;
        
      }
      .selected{
          color: ##{color1};
          border-bottom: 4px solid ##{color1};
        }
      
    }

  }
  .conversation-type-link{ 
        color: #4a4a4a;
      }
  